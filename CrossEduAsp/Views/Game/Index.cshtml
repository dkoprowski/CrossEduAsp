@model IEnumerable<CrossEduAsp.Models.Entities.GameEntity>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="col-md-3 margin-top">

        <input class="margin-top" type="text" placeholder="Szukaj" size="28">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>

        <div class="category margin-top">
            <div class="category-header">
                Sortuj według tagów
            </div>
            <div class="cell">
                <div class="checkbox margin-top margin-left">
                    <label>
                        <input type="checkbox"> Free To Play
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> MMO
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Gry Akcji
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Strzelanka
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Niezależne
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Przygodowe
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Tryb dla jednego gracza
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Tryb wielosobowy
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> FPS
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Strategie
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> RPG
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Symulacje
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Proste Gry
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Wyścigi
                    </label>
                </div>
            </div>
            <div class="cell">
                <div class="checkbox margin-left padding-bottom">
                    <label>
                        <input type="checkbox"> Sportowe
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9 portfolio-item margin-top">
        @foreach (var item in Model)
        {
            <div class="game row">


                <img class="col-md-4" src="http://placehold.it/300x200" alt="">
                <div class="col-md-8">
                    <h2 class="gameTitle">
                        @Html.ActionLink(Html.DisplayFor(modelItem => item.Title).ToString(), "ShowGame", new { id = item.Id })
                    </h2>
                    <br />
                    @Html.DisplayNameFor(model => model.Description)
                    @Html.DisplayFor(modelItem => item.Description)
                    <br />
                    <div class="upload">
                        @Html.DisplayNameFor(model => model.ApplicationUser.UserName) :
                        @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)

                        @Html.DisplayNameFor(model => model.ReleaseDate)
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </div>
                </div>
            </div>
        }

    </div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</body>
</html>
