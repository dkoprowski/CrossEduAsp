                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Gry Akcji
                    </label>
                </div>
                </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Strzelanka
                    </label>
                </div>
                </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Niezależne
                    </label>
                </div>
                </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Przygodowe
                    </label>
                </div>
                </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Tryb dla jednego gracza
                    </label>
                </div>
                </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
                        <input type="checkbox"> Tryb wielosobowy
                    </label>
                </div>
                </div>
            <div class="cell">
                <div class="checkbox margin-left">
                    <label>
