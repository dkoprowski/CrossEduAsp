                    <label>
                        <input type="checkbox"> Sportowe
                    </label>
                </div>
                </div>
            </div>
    </div>


    <div class="col-md-9">
        <div class="jumbotron">
            <h1>Top 10</h1>
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-md-8">
                        <h2 class="gameTitle">
                            @Html.ActionLink(Html.DisplayFor(modelItem => item.Title).ToString(), "Game", "ShowGame", new {id = item.Id})
                        </h2>
                        <br/>
                    </div>
                </div>
            }
        </div>
    </div>